{
  "extends": "@fiahfy/tsconfig",
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~~/*": ["./*"]
    },
    "types": ["chrome", "vuetify", "node"],
    "experimentalDecorators": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
